{
   "compilerOptions": {
      "lib": ["es2017", "dom", "es6"],
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "baseUrl": "src",
      "allowSyntheticDefaultImports": true,
      "paths": {
         "@entities/*": ["entity/*"],
         "@utils/*": ["utils/*"],
         "config": ["config.ts"]
      }
   }
}
